{
  "name": "wire-web-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "GPL-3.0",
  "dependencies": {
    "@wireapp/commons": "3.7.2",
    "dotenv": "8.2.0",
    "dotenv-extended": "2.8.0",
    "express": "4.17.1",
    "express-sitemap-xml": "1.1.0",
    "express-useragent": "1.0.15",
    "fs-extra": "9.0.1",
    "geolite2": "1.3.0",
    "hbs": "4.1.1",
    "helmet": "3.23.3",
    "http-status-codes": "2.1.1",
    "logdown": "3.3.1",
    "maxmind": "4.1.4",
    "opn": "6.0.0",
    "pm2": "4.4.1"
  },
  "devDependencies": {
    "@types/express": "4.17.7",
    "@types/express-sitemap-xml": "1.1.0",
    "@types/express-useragent": "1.0.0",
    "@types/fs-extra": "8.1.1",
    "@types/hbs": "4.0.1",
    "@types/helmet": "0.0.48",
    "@types/jasmine": "3.5.13",
    "@types/node": "~10",
    "jasmine": "3.6.1",
    "nyc": "15.1.0",
    "rimraf": "3.0.2",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  },
  "scripts": {
    "build": "yarn clean && tsc -P tsconfig.json && yarn copy-assets && yarn create-commit-sha",
    "copy-assets": "node ./bin/copy_server_assets.js",
    "create-commit-sha": "node ./bin/create_commit_sha_file.js",
    "clean": "rimraf ./dist/",
    "start:prod": "pm2 start \"./index.js\" --name \"Webapp\" && pm2 logs",
    "test": "nyc jasmine --config=jasmine.json",
    "test:dev": "nyc --all=false jasmine --config=jasmine.json"
  }
}
