{
  "name": "@wireapp/logger",
  "version": "0.1.0",
  "description": "Security-critical unified logging library with automatic PII sanitization, multi-transport support, and global singleton for Electron + Browser contexts",
  "license": "GPL-3.0",
  "author": "Wire Swiss GmbH",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rimraf lib",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "yarn clean && yarn build",
    "presidio:update": "node scripts/updatePresidio.js"
  },
  "keywords": [
    "logging",
    "logger",
    "wire",
    "datadog",
    "sanitization",
    "pii",
    "presidio",
    "security",
    "gdpr",
    "electron",
    "browser",
    "typescript",
    "multi-transport",
    "singleton"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-webapp.git",
    "directory": "libraries/Logger"
  },
  "bugs": {
    "url": "https://github.com/wireapp/wire-webapp/issues"
  },
  "homepage": "https://github.com/wireapp/wire-webapp/tree/main/libraries/Logger#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@datadog/browser-logs": "5.35.1",
    "@datadog/browser-rum": "5.35.1",
    "logdown": "^3.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
