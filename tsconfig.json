{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "src/script/auth",
    "rootDirs": ["src/script"],
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "server"]
}
