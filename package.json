{
  "name": "wire-web-monorepo",
  "version": "1.0.0",
  "description": "Wire web apps monorepo (wire-webapp, account pages, team settings)",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "packages/*",
    "apps/*",
    "apps/webapp/server"
  ],
  "dependencies": {
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "ts-node": "10.9.2"
  },
  "scripts": {
    "postinstall": "husky install",
    "build:packages": "yarn workspaces foreach -Rpt --from 'packages/*' run build",
    "dev": "yarn workspaces foreach -Api run dev",
    "lint": "yarn workspaces foreach -Ap run lint",
    "test": "yarn workspaces foreach -Ap run test"
  },
  "prettier": "@wireapp/prettier-config"
}
