{
  "name": "wire-webapp",
  "license": "LicenseRef-LICENSE",
  "devDependencies": {
    "autoprefixer": "7.1.5",
    "eslint": "4.9.0",
    "eslint-config-prettier": "2.6.0",
    "eslint-plugin-jsdoc": "3.1.3",
    "eslint-plugin-prettier": "2.3.1",
    "grunt": "1.0.1",
    "grunt-aws-s3": "2.0.0",
    "grunt-bower-task": "0.5.0",
    "grunt-cli": "1.2.0",
    "grunt-contrib-clean": "1.1.0",
    "grunt-contrib-compress": "1.4.3",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-connect": "1.0.2",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-less": "1.4.1",
    "grunt-contrib-uglify": "wireapp/grunt-contrib-uglify#harmony-v2.8.22",
    "grunt-contrib-watch": "1.0.0",
    "grunt-gitinfo": "0.1.8",
    "grunt-include-replace": "5.0.0",
    "grunt-karma": "2.0.0",
    "grunt-newer": "1.3.0",
    "grunt-open": "0.2.3",
    "grunt-postcss": "0.9.0",
    "grunt-shell": "2.1.0",
    "grunt-todo": "0.5.0",
    "husky": "0.14.3",
    "jasmine-ajax": "3.3.1",
    "jasmine-core": "2.8.0",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.1.0",
    "prettier": "1.7.4",
    "lint-staged": "4.3.0",
    "load-grunt-tasks": "3.5.2",
    "request": "2.83.0",
    "sinon": "4.0.1"
  },
  "lint-staged": {
    "*.js": ["eslint -c .eslintrc.yaml --fix", "git add"],
    "*.json": ["prettier --print-width=200 --write", "git add"],
    "*.less": ["prettier --write", "git add"]
  },
  "scripts": {
    "deploy-travis-dev": "grunt app_deploy_travis:dev",
    "deploy-travis-prod": "grunt app_deploy_travis:prod",
    "deploy-travis-staging": "grunt app_deploy_travis:staging",
    "lint": "yarn lint:script && yarn lint:styles",
    "lint:fix": "yarn lint:styles && yarn lint:json && npm run lint:script -- --fix",
    "lint:json": "prettier --print-width=200 --ignore-path .gitignore --write '**/*.json'",
    "lint:script": "eslint -c .eslintrc.yaml --ignore-path .gitignore --ignore-path .eslintignore app/script/ test/ bin/ grunt/ Gruntfile.js karma.conf.js",
    "lint:style": "prettier --write 'app/style/**/*.less'",
    "postinstall": "grunt init",
    "precommit": "lint-staged",
    "start": "grunt",
    "test": "yarn lint && grunt check && grunt test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-webapp.git"
  },
  "private": true
}
